            },
            p2p_transfer => #{
                namespace => 'ff/p2p_transfer_v1'
            },
            p2p_session => #{
                namespace => 'ff/p2p_transfer/session_v1'
            },
            w2w_transfer => #{
                namespace => 'ff/w2w_transfer_v1'
            },
            p2p_template => #{
                namespace => 'ff/p2p_template_v1'
            }
        }}
    ]},

    {snowflake, [
