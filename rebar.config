    },
    {woody_user_identity,
        {git, "git@github.com:rbkmoney/woody_erlang_user_identity.git", {branch, "master"}}
    },
    {erl_health,
        {git, "https://github.com/rbkmoney/erlang-health.git", {branch, "master"}}
    },
    {machinery,
        {git, "git@github.com:rbkmoney/machinery.git", {branch, "master"}}
    },
    {gproc,
